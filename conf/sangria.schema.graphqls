interface Node {
    id: Int!
}

interface Named {
    name: String!
}

interface TimeStamped {
    created: String!
    lastModified: String!
}

type User implements Node, TimeStamped {
    id: Int!
    created: String!
    lastModified: String!

    email: String!
    firstName: String
    lastName: String
    threads: [Thread!]!
    posts: [Post!]!
}

type ForumGroup implements Node, TimeStamped, Named {
    id: Int!
    name: String!
    created: String!
    lastModified: String!

    forums: [Forum!]!
}

type Forum implements Node, TimeStamped, Named {
    id: Int!
    name: String!
    created: String!
    lastModified: String!

    forumGroup: ForumGroup!
    threads: [Thread!]!
}

type Thread implements Node, TimeStamped, Named {
    id: Int!
    name: String!
    created: String!
    lastModified: String!
    createdBy: User!

    forum: Forum!
}

type Post implements Node, TimeStamped {
    id: Int!
    created: String!
    lastModified: String!
    createdBy: User!

    content: String!
    thread: Thread!
    replyingTo: Post
}

type Query {
    users: [User]
    user(id: Int!): User

    forumGroups: [ForumGroup]
    forumGroup(id: Int): ForumGroup

    forums: [Forum]
    forums(forumGroupId: Int): [Forum]
    forum(id: Int): Forum
}